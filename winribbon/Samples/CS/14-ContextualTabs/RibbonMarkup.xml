    </Command>

    <Command Name="cmdButtonUnselect"
             Id="1009"
             LabelTitle="Unselect"
             LabelDescription="Simulates unselecting a table"
             TooltipTitle="Unselect"
             TooltipDescription="Simulates unselecting a table">
      <Command.LargeImages>
        <Image>Res/Unselect32.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonDesign1"
             Id="1010"
             LabelTitle="Design 1">
      <Command.LargeImages>
        <Image>Res/DropA32.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonDesign2"
             Id="1011"
             LabelTitle="Design 2">
      <Command.LargeImages>
        <Image>Res/DropB32.bmp</Image>
      </Command.LargeImages>
